<Window x:Class="FitnessMembership.View.AddWindow"
        x:Name="AddViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Member" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource Locator}, Path=AddViewModel}">
    <Grid Background="#FFECEAEA">
        <Label Grid.Row="0" Grid.Column="0" Content="First Name" Grid.ColumnSpan="3" />
        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding SelectedEmployee.EnteredFName}" Grid.ColumnSpan="2"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Last Name" Grid.ColumnSpan="3" Grid.RowSpan="6" />
        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding SelectedEmployee.EnteredLName}" Grid.ColumnSpan="2" Grid.RowSpan="6"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Email" Grid.ColumnSpan="3" />
        <TextBox Grid.Row="7" Grid.Column="3" Text="{Binding SelectedEmployee.EnteredEmail}" Grid.ColumnSpan="2"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53"/>
            <ColumnDefinition Width="145"/>
            <ColumnDefinition Width="27"/>
            <ColumnDefinition Width="269*" />
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="19"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="19"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
